<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ssteffanus.feelingsdiary.Summary"
    android:background="#a05fe42b"
    android:textAlignment="center">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/linear">


    <TextView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Summary"
        android:id="@+id/summ_summ"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.17"
        android:textSize="50dp"
        android:textColor="#f0fcff"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recently, you seem to be feeling"
        android:id="@+id/title_summ"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.11"
        android:gravity="center"
        android:textSize="25dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_summ"
        android:inputType="textMultiLine"
        android:textColor="#6775ff"
        android:textSize="45dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diagnosis_summ"
        android:inputType="textMultiLine"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="normal"
        android:textColor="#8d59ff"
        android:textAlignment="center"
        android:typeface="serif"
        android:gravity="center"
        android:text="s" />

</LinearLayout>
</RelativeLayout>